<Page x:ConnectionId='1'
    x:Class="Let_s_Pick_UWP.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Let_s_Pick_UWP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="765.5"
    d:DesignWidth="847.103"
                            
    mc:Ignorable="d">

    <Grid x:ConnectionId='2'
        Margin="0,0,0,0"
        VerticalAlignment="Stretch"
                            >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*" MinWidth="198" />
            <ColumnDefinition Width="5*" MinWidth="165" />
            <ColumnDefinition Width="12*" MinWidth="396" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <TextBlock x:ConnectionId='3'
            x:Name="Showing"
            x:Uid="HomePage_Showing"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="35,0,0,0"
            Padding="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontFamily="Segoe UI"
            FontSize="130"
            FontStretch="Normal"
            FontWeight="Bold"
            MaxLines="1"
            Text="Show" />
        <ListView x:ConnectionId='4'
            x:Name="ResultList"
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="10,9.8,10.2,10.6"
            Padding="10">
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <ItemsStackPanel ItemsUpdatingScrollMode="KeepLastItemInView" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
        <Rectangle x:ConnectionId='5'
            x:Name="Toolbar_Background"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Margin="0,0.4,0.2,-0.4"
            Visibility="Collapsed">
            <Rectangle.Fill>
                <AcrylicBrush
                    BackgroundSource="HostBackdrop"
                    FallbackColor="{ThemeResource SystemAccentColorLight2}"
                    TintColor="{ThemeResource SystemAccentColor}"
                    TintOpacity="0.5" />
            </Rectangle.Fill>
        </Rectangle>
        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Margin="10,15.4,0,0"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <TextBox x:ConnectionId='32'
                x:Name="TargetNumberBox"
                x:Uid="HomePage_TargetNumberBox"
                Width="100"
                Height="60"
                FontSize="14"
                FontStyle="Normal"
                InputScope="Number"
                                                         
                Text="1"
                TextAlignment="Center">
                <TextBox.Header>
                    <TextBlock x:ConnectionId='37'
                        x:Name="TargetNumberBox_Header"
                        x:Uid="HomePage_TargetNumberBox_Header"
                        Text="Target Number" />
                </TextBox.Header>
            </TextBox>
            <Button x:ConnectionId='33'
                x:Name="UpButton"
                Width="40"
                Height="37"
                VerticalAlignment="Bottom"
                                      
                RenderTransformOrigin="0.5,0.5">
                <SymbolIcon x:ConnectionId='36' x:Name="Add_Sy" Symbol="Add" />
            </Button>
            <Button x:ConnectionId='34'
                x:Name="DownButton"
                Width="40"
                Height="37"
                VerticalAlignment="Bottom"
                                        >
                <SymbolIcon x:ConnectionId='35' x:Name="Remove_Sy" Symbol="Remove" />
            </Button>
        </StackPanel>
        <ToggleSwitch x:ConnectionId='6'
            x:Name="AutoStopSwitch"
            x:Uid="HomePage_AutoStopSwitch"
            Grid.Row="2"
            Grid.Column="1"
            Height="71"
            Margin="39,15.4,0,0"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            IsOn="True">
            <ToggleSwitch.Header>
                <TextBlock x:ConnectionId='31'
                    x:Name="AutoStopSwitch_Header"
                    x:Uid="HomePage_AutoStopSwitch_Header"
                    Text="Auto Stop" />
            </ToggleSwitch.Header>
        </ToggleSwitch>
        <Grid
            Grid.Row="2"
            Grid.Column="2"
            HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='12'
                x:Name="FinishButton"
                x:Uid="HomePage_FinishButton"
                Grid.Row="0"
                Grid.Column="1"
                Width="350"
                Height="70"
                HorizontalAlignment="Left"
                Background="LightSlateGray"
                Content="Finished!"
                CornerRadius="30"
                FontSize="36"
                RequestedTheme="Default">
                <Button.Resources>
                    <Storyboard x:ConnectionId='29' x:Name="EnterFinishButton">
                        <FadeInThemeAnimation TargetName="FinishButton" />
                    </Storyboard>
                    <Storyboard x:ConnectionId='30' x:Name="ExitFinishButton">
                        <FadeOutThemeAnimation TargetName="FinishButton" />
                    </Storyboard>
                </Button.Resources>
            </Button>
            <Button x:ConnectionId='13'
                x:Name="StopButton"
                x:Uid="HomePage_StopButton"
                Grid.Row="0"
                Grid.Column="1"
                Width="350"
                Height="70"
                HorizontalAlignment="Left"
                Background="PaleVioletRed"
                Content="Stop!"
                CornerRadius="30"
                FontSize="36"
                RequestedTheme="Default"
                                          >
                <Button.Resources>
                    <Storyboard x:ConnectionId='27' x:Name="EnterStopButton">
                        <FadeInThemeAnimation TargetName="StopButton" />
                    </Storyboard>
                    <Storyboard x:ConnectionId='28' x:Name="ExitStopButton">
                        <FadeOutThemeAnimation TargetName="StopButton" />
                    </Storyboard>
                </Button.Resources>
            </Button>
            <Button x:ConnectionId='14'
                x:Name="AccelatingButton"
                x:Uid="HomePage_AccelatingButton"
                Grid.Row="0"
                Grid.Column="1"
                Width="350"
                Height="70"
                HorizontalAlignment="Left"
                Background="Goldenrod"
                Content="Accelating"
                CornerRadius="30"
                FontSize="36"
                RequestedTheme="Default">
                <Button.Resources>
                    <Storyboard x:ConnectionId='25' x:Name="EnterAccelatingButton">
                        <FadeInThemeAnimation TargetName="AccelatingButton" />
                    </Storyboard>
                    <Storyboard x:ConnectionId='26' x:Name="ExitAccelatingButton">
                        <FadeOutThemeAnimation TargetName="AccelatingButton" />
                    </Storyboard>
                </Button.Resources>
            </Button>
            <Button x:ConnectionId='15'
                x:Name="ProcessingButton"
                x:Uid="HomePage_ProcessingButton"
                Grid.Row="0"
                Grid.Column="1"
                Width="350"
                Height="70"
                HorizontalAlignment="Left"
                Background="Goldenrod"
                Content="Processing..."
                CornerRadius="30"
                FontSize="36"
                RequestedTheme="Default">
                <Button.Resources>
                    <Storyboard x:ConnectionId='23' x:Name="EnterProcessingButton">
                        <FadeInThemeAnimation TargetName="ProcessingButton" />
                    </Storyboard>
                    <Storyboard x:ConnectionId='24' x:Name="ExitProcessingButton">
                        <FadeOutThemeAnimation TargetName="ProcessingButton" />
                    </Storyboard>
                </Button.Resources>
            </Button>
            <Button x:ConnectionId='16'
                x:Name="PickButton"
                x:Uid="HomePage_PickButton"
                Grid.Row="0"
                Grid.Column="1"
                Width="350"
                Height="70"
                HorizontalAlignment="Left"
                Background="CadetBlue"
                                        
                Content="Pick!"
                CornerRadius="30"
                FontSize="36"
                RequestedTheme="Default">
                <Button.Resources>
                    <Storyboard x:ConnectionId='21' x:Name="EnterPickButton">
                        <FadeInThemeAnimation TargetName="PickButton" />
                    </Storyboard>
                    <Storyboard x:ConnectionId='22' x:Name="ExitPickButton">
                        <FadeOutThemeAnimation TargetName="PickButton" />
                    </Storyboard>
                </Button.Resources>
            </Button>
            <Ellipse x:ConnectionId='17'
                x:Name="ProgressEllipse"
                Grid.Row="0"
                Grid.Column="0"
                Width="50"
                Height="50"
                Margin="0,0,10,0"
                HorizontalAlignment="Right"
                Stroke="Black"
                StrokeDashArray="14.3"
                StrokeDashCap="Round"
                StrokeDashOffset="14.25"
                StrokeThickness="5">
                <Ellipse.Resources>
                    <Storyboard x:ConnectionId='18' x:Name="ProgressEllipseRunning">
                        <DoubleAnimationUsingKeyFrames
                            EnableDependentAnimation="True"
                            RepeatBehavior="Forever"
                            Storyboard.TargetName="ProgressEllipse"
                            Storyboard.TargetProperty="(Shape.StrokeDashOffset)">
                            <EasingDoubleKeyFrame KeyTime="00:00:01" Value="-14.2">
                                <EasingDoubleKeyFrame.EasingFunction>
                                    <PowerEase EasingMode="EaseInOut" />
                                </EasingDoubleKeyFrame.EasingFunction>
                            </EasingDoubleKeyFrame>
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                    <Storyboard x:ConnectionId='19' x:Name="EnterProgressEllipse">
                        <FadeInThemeAnimation TargetName="ProgressEllipse" />
                    </Storyboard>
                    <Storyboard x:ConnectionId='20' x:Name="ExitProgressEllipse">
                        <FadeOutThemeAnimation TargetName="ProgressEllipse" />
                    </Storyboard>
                </Ellipse.Resources>
            </Ellipse>
        </Grid>
        <StackPanel x:ConnectionId='7'
            x:Name="SeedStack"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <TextBlock x:ConnectionId='8'
                x:Name="Seed"
                x:Uid="HomePage_Seed"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Text="Seed" />
            <TextBlock x:ConnectionId='9'
                x:Name="Seed_value"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom" />
            <TextBlock x:ConnectionId='10'
                x:Name="RandomNumber_Requesting"
                x:Uid="HomePage_RandomNumber_Requesting"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Text="Requeting true random numbers from random.org"
                Visibility="Collapsed" />
            <TextBlock x:ConnectionId='11'
                x:Name="RandomIO_Label"
                x:Uid="HomePage_RandomNumber_RandomIO_Label"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Text="Radom numbers from random.io, No seed"
                Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</Page>

